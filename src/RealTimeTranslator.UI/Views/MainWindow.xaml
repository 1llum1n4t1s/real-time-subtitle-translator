<Window x:Class="RealTimeTranslator.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="リアルタイム字幕翻訳" 
        Height="500" Width="700"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="リアルタイム字幕翻訳" 
                       FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="ゲームや動画の音声をリアルタイムで日本語字幕に変換します" 
                       Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- プロセス選択 -->
        <GroupBox Grid.Row="1" Header="対象アプリケーション" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ComboBox Grid.Column="0" 
                          ItemsSource="{Binding Processes}"
                          SelectedItem="{Binding SelectedProcess}"
                          DisplayMemberPath="DisplayName"/>
                <Button Grid.Column="1" 
                        Content="更新" 
                        Command="{Binding RefreshProcessesCommand}"/>
            </Grid>
        </GroupBox>
        
        <!-- ステータス表示 -->
        <GroupBox Grid.Row="2" Header="ステータス" Padding="10" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Ellipse Width="12" Height="12" 
                             Fill="{Binding StatusColor}" 
                             Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding StatusText}" 
                               FontSize="14"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="処理遅延: "/>
                    <TextBlock Text="{Binding ProcessingLatency, StringFormat={}{0:F0}ms}"/>
                    <TextBlock Text="  |  翻訳遅延: " Margin="20,0,0,0"/>
                    <TextBlock Text="{Binding TranslationLatency, StringFormat={}{0:F0}ms}"/>
                </StackPanel>
                
                <!-- ログ表示 -->
                <ScrollViewer Grid.Row="2" Margin="0,10,0,0" 
                              VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding LogText, Mode=OneWay}" 
                             IsReadOnly="True" 
                             TextWrapping="Wrap"
                             Background="#F5F5F5"
                             BorderThickness="0"
                             Padding="10"/>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        
        <!-- コントロールボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="開始" 
                    Command="{Binding StartCommand}"
                    IsEnabled="{Binding CanStart}"
                    Background="#4CAF50" Foreground="White"
                    Width="120"/>
            <Button Content="停止" 
                    Command="{Binding StopCommand}"
                    IsEnabled="{Binding IsRunning}"
                    Background="#F44336" Foreground="White"
                    Width="120"/>
            <Button Content="設定" 
                    Command="{Binding OpenSettingsCommand}"
                    Width="120"/>
        </StackPanel>
    </Grid>
</Window>
